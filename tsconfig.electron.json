{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-electron",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "isolatedModules": false,
    "types": ["node"]
  },
  "include": [
    "electron/**/*.ts",
    "electron/**/*.cts"
  ]
}
